<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/contentImg"
        android:layout_width="124dp"
        android:layout_height="133dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:mipmap/sym_def_app_icon" />

    <TextView
        android:id="@+id/contentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/kopubworlddotumbold"
        android:text="TextView"
        android:textColor="#555555"
        app:layout_constraintStart_toEndOf="@+id/contentImg"
        app:layout_constraintTop_toTopOf="@+id/contentImg" />

    <TextView
        android:id="@+id/contentCategoryAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/kopubworlddotumlight"
        android:text="TextView"
        android:textColor="#919191"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/contentImg"
        app:layout_constraintTop_toBottomOf="@+id/contentTitle" />

    <TextView
        android:id="@+id/contentSummary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/kopubworlddotumlight"
        android:text="TextView"
        android:textColor="#4a4a4a"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/contentImg"
        app:layout_constraintTop_toBottomOf="@+id/contentCategoryAuthor" />

    <TextView
        android:id="@+id/likeImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="@font/kopubworlddotumbold"
        android:text="â™¡"
        android:textColor="@color/main_green"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/contentImg" />

    <TextView
        android:id="@+id/likeNumTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:fontFamily="@font/kopubworlddotummedium"
        android:text="TextView"
        android:textColor="@color/main_green"
        android:textSize="7sp"
        app:layout_constraintBottom_toBottomOf="@+id/likeImg"
        app:layout_constraintStart_toEndOf="@+id/likeImg"
        app:layout_constraintTop_toTopOf="@+id/likeImg" />

    <ImageView
        android:id="@+id/scrapImg"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginStart="80dp"
        app:layout_constraintBottom_toBottomOf="@+id/likeNumTxt"
        app:layout_constraintStart_toEndOf="@+id/likeImg"
        app:layout_constraintTop_toTopOf="@+id/likeNumTxt"
        app:srcCompat="@android:drawable/btn_star_big_off" />

    <TextView
        android:id="@+id/scrapNumTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:fontFamily="@font/kopubworlddotummedium"
        android:text="TextView"
        android:textColor="@color/main_green"
        android:textSize="7sp"
        app:layout_constraintBottom_toBottomOf="@+id/scrapImg"
        app:layout_constraintStart_toEndOf="@+id/scrapImg"
        app:layout_constraintTop_toTopOf="@+id/scrapImg" />
</androidx.constraintlayout.widget.ConstraintLayout>